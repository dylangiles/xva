  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'xva'",
      "cargo": {
        "args": ["build", "--bin=xva", "--package=xva"],
        "filter": {
          "name": "xva",
          "kind": "bin"
        }
      },
      "args": ["treesitter\\hello.xva", "-Zprint-cst"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'xva'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=xva", "--package=xva"],
        "filter": {
          "name": "xva",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'xvasyntax'",
      "cargo": {
        "args": ["test", "--no-run", "--lib", "--package=xvasyntax"],
        "filter": {
          "name": "xvasyntax",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'tree-sitter-xva'",
      "cargo": {
        "args": ["test", "--no-run", "--lib", "--package=tree-sitter-xva"],
        "filter": {
          "name": "tree-sitter-xva",
          "kind": "lib"
        }
      },
      "args": [],
